{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tugpgp",
  "version": "0.3.0-alpha.1",
  "identifier": "in.kushaldas.tugpgp",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tugpgp",
        "width": 983,
        "height": 702,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ],
    "linux": {
      "rpm": {
        "depends": ["webkit2gtk4.1", "gtk3", "openssl-libs"]
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0", "libssl3"]
      }
    }
  }
}
